{
  "private": true,
  "name": "play-figma-plugin",
  "version": "1.0.0",
  "description": "Figma plugin for Play.",
  "scripts": {
    "start": "npm run dev",
    "dev": "webpack --watch",
    "prebuild": "npm run lint:fix && rimraf dist/*",
    "build": "webpack -p",
    "lint": "npm run lint:ts && npm run lint:css",
    "lint:fix": "npm run lint:ts:fix && npm run lint:css:fix",
    "lint:ts": "eslint . --ext .ts,.js",
    "lint:ts:fix": "eslint . --ext .ts,.js",
    "lint:css": "stylelint 'src/**/*'",
    "lint:css:fix": "stylelint 'src/**/*' --fix",
    "test:base": "jest --passWithNoTests",
    "test:precheck": "test -d dist || npm run build",
    "pretest": "npm run test:precheck",
    "test": "npm run test:base",
    "pretest:watch": "npm run test:precheck",
    "test:watch": "npm run test:base -- --watch"
  },
  "author": {
    "name": "Steve Ruiz",
    "email": "steveruizok@gmail.com",
    "url": "https://twitter.com/steveruizok"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/aarongarciah/figma-plugin-typescript-boilerplate"
  },
  "homepage": "https://createwithplay.com/",
  "devDependencies": {
    "@types/figma": "^1.0.3",
    "@types/jest": "^25.2.1",
    "@types/node": "^13.11.0",
    "@types/react": "^16.9.46",
    "@typescript-eslint/eslint-plugin": "^2.26.0",
    "@typescript-eslint/parser": "^2.26.0",
    "css-loader": "^3.4.2",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-prettier": "^3.1.2",
    "html-webpack-inline-source-plugin": "0.0.10",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^4.2.3",
    "jest": "^25.2.7",
    "lint-staged": "^10.1.2",
    "prettier": "^2.0.4",
    "rimraf": "^3.0.2",
    "style-loader": "^1.1.3",
    "stylelint": "^13.3.0",
    "stylelint-config-prettier": "^8.0.1",
    "stylelint-config-recommended": "^3.0.0",
    "stylelint-prettier": "^1.1.2",
    "ts-jest": "^25.3.1",
    "ts-loader": "^6.2.2",
    "typescript": "^3.8.3",
    "url-loader": "^3.0.0",
    "webpack": "^4.42.1",
    "webpack-cli": "^3.3.11"
  },
  "prettier": {
    "semi": false,
    "trailingComma": "es5"
  },
  "keywords": [
    "figma",
    "plugin",
    "figma plugin",
    "boilerplate",
    "typescript",
    "eslint",
    "stylelint",
    "prettier"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js}": [
      "git add"
    ],
    "src/**/*": [
      "git add"
    ],
    "*.{html,json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "@radix-ui/react-label": "^0.0.6",
    "@radix-ui/react-slider": "^0.0.6",
    "@state-designer/react": "^1.5.6",
    "@stitches/react": "^0.0.2",
    "@types/react-dom": "^16.9.8",
    "@types/react-select": "^3.0.19",
    "firebase": "^7.19.1",
    "perfect-freehand": "^0.3.3",
    "polygon-clipping": "^0.15.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  }
}
